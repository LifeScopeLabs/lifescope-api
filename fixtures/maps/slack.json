{
  "version": "1.0",
  "name": "Slack",
  "description": "Workspace communication service",
  "url": "https://slack.com/api",
  "tags": [
	"collaboration",
	"productivity"
  ],
  "auth": {
	"type": "oauth2",
	"redirect_url": "https://app.lifescope.io/connections/complete",
	"authorization_url": "https://slack.com/oauth/authorize",
	"access_token": "https://slack.com/api/oauth.access",
	"signature": "header",
	"auth_key": "***INSERT AUTH KEY HERE***",
	"auth_secret": "***INSERT AUTH SECRET HERE***"
  },
  "meta": {
	"uniqueness_location": "email",
	"default_name_location": "email",
	"endpoint": {
	  "route": {
		"data": "profile",
		"path": "/users.profile.get"
	  },
	  "scopes": [
		"users.profile:read"
	  ],
	  "model": {
		"key": "email",
		"fields": {
		  "email": "string",
		  "real_name": "string",
		  "image_512": "string"
		}
	  }
	}
  },
  "endpoints": {
	"UserConversations": {
	  "GET": {
		"method": "GET",
		"scopes": [
		  "channels:read",
		  "groups:read",
		  "im:read",
		  "mpim:read"
		],
		"route": {
		  "data": "channels",
		  "path": "/users.conversations"
		},
		"parameters": {
		  "cursor": "{{ parameters.cursor }}",
		  "limit": "{{ parameters.limit }}",
		  "types": "{{ parameters.types }}"
		},
		"model": {
		  "key": "id",
		  "fields": {
			"id": "string",
			"name": "string",
			"is_channel": "boolean",
			"is_shared": "boolean",
			"is_group": "boolean",
			"is_im": "boolean",
			"is_mpim": "boolean",
			"is_private": "boolean"
		  }
		}
	  }
	},
	"UserConversationsPage": {
	  "GET": {
		"method": "GET",
		"scopes": [
		  "channels:read",
		  "groups:read",
		  "im:read",
		  "mpim:read"
		],
		"route": {
		  "path": "/users.conversations"
		},
		"parameters": {
		  "cursor": "{{ parameters.cursor }}",
		  "limit": "{{ parameters.limit }}",
		  "types": "{{ parameters.types }}"
		},
		"model": {
		  "key": "response_metadata",
		  "fields": {
			"has_more": "boolean",
			"response_metadata": {
			  "type": "object",
			  "fields": {
				"next_cursor": "string"
			  }
			}
		  }
		}
	  }
	},
	"ConversationHistory": {
	  "GET": {
		"method": "GET",
		"scopes": [
		  "channels:history",
		  "groups:history",
		  "im:history",
		  "mpim:history"
		],
		"route": {
		  "data": "messages",
		  "path": "/conversations.history"
		},
		"parameters": {
		  "channel": "{{ parameters.channel }}",
		  "cursor": "{{ parameters.cursor }}",
		  "latest": "{{ parameters.latest }}",
		  "limit": "{{ parameters.limit }}",
		  "oldest": "{{ parameters.oldest }}"
		},
		"model": {
		  "key": "ts",
		  "fields": {
			"ts": "string",
			"type": "string",
			"subtype": "string",
			"text": "string",
			"user": "string",
			"user_hydrated": {
			  "type": "related",
			  "ref": "UserProfile",
			  "reverse": {
				"identifier": "{{ model.user }}"
			  }
			},
			"channel": {
			  "type": "composite",
			  "parameters": "{{ parameters.channel }}"
			}
		  }
		}
	  }
	},
	"ConversationHistoryPage": {
	  "GET": {
		"method": "GET",
		"scopes": [
		  "channels:history",
		  "groups:history",
		  "im:history",
		  "mpim:history"
		],
		"route": {
		  "path": "/conversations.history"
		},
		"parameters": {
		  "channel": "{{ parameters.channel }}",
		  "cursor": "{{ parameters.cursor }}",
		  "latest": "{{ parameters.latest }}",
		  "limit": "{{ parameters.limit }}",
		  "oldest": "{{ parameters.oldest }}"
		},
		"model": {
		  "key": "response_metadata",
		  "fields": {
			"has_more": "boolean",
			"response_metadata": {
			  "type": "object",
			  "fields": {
				"next_cursor": "string"
			  }
			}
		  }
		}
	  }
	},
	"UserProfile": {
	  "GET": {
		"method": "GET",
		"route": {
		  "data": "profile",
		  "path": "/users.profile.get"
		},
		"scopes": [
		  "users.profile:read"
		],
		"parameters": {
		  "user": "{{ identifier }}"
		},
		"model": {
		  "key": "email",
		  "fields": {
			"email": "string",
			"real_name": "string",
			"display_name": "string",
			"image_24": "string",
			"image_32": "string",
			"image_48": "string",
			"image_72": "string",
			"image_192": "string",
			"image_512": "string"
		  }
		}
	  }
	},
	"ConversationFiles": {
	  "GET": {
		"method": "GET",
		"scopes": [
		  "files:read"
		],
		"route": {
		  "data": "files",
		  "path": "/files.list"
		},
		"parameters": {
		  "channel": "{{ parameters.channel }}",
		  "count": "{{ parameters.count }}",
		  "page": "{{ parameters.page }}",
		  "ts_from": "{{ parameters.ts_from }}",
		  "ts_to": "{{ parameters.ts_to }}"
		},
		"model": {
		  "key": "id",
		  "fields": {
			"id": "string",
			"created": "number",
			"name": "string",
			"mimetype": "string",
			"permalink": "string",
			"thumb_360": "string",
			"thumb_360_gif": "string",
			"user": "string",
			"user_hydrated": {
			  "type": "related",
			  "ref": "UserProfile",
			  "reverse": {
				"identifier": "{{ model.user }}"
			  }
			}
		  }
		}
	  }
	},
	"ConversationFilesPage": {
	  "GET": {
		"method": "GET",
		"scopes": [
		  "files:read"
		],
		"route": {
		  "data": "paging",
		  "path": "/files.list"
		},
		"parameters": {
		  "channel": "{{ parameters.channel }}",
		  "count": "{{ parameters.count }}",
		  "page": "{{ parameters.page }}",
		  "ts_from": "{{ parameters.ts_from }}",
		  "ts_to": "{{ parameters.ts_to }}"
		},
		"model": {
		  "key": "count",
		  "fields": {
			"count": "string",
			"total": "string",
			"page": "string",
			"pages": "string"
		  }
		}
	  }
	}
  }
}